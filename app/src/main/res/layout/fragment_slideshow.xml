<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context=".ui.slideshow.SlideshowFragment">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/text_slideshow"
        android:layout_width="381dp"
        android:layout_height="264dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="400dp"
        android:layout_height="315dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_slideshow"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="160dp"
            android:textColor="@android:color/white">

            <TextView
                android:id="@+id/expense_ft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@color/nav_header"
                android:padding="5dp"
                android:text="Расход"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/white"
                android:visibility="invisible"
                app:layout_anchor="@+id/linearLayout"
                app:layout_anchorGravity="end|center" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/expense_Ft_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:backgroundTint="#07bca4"
                android:visibility="invisible"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                app:srcCompat="@drawable/expense" />


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_main_plus_btn"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#306C95"
            app:fabSize="normal"
            app:srcCompat="@drawable/income_1" />

        <TableLayout
            android:id="@+id/simpleTableLayout"
            android:layout_width="388dp"
            android:layout_height="307dp"
            android:stretchColumns="1"> <!-- stretch the second column of the layout-->

            <!-- first row of the table layout-->
            <TableRow

                android:id="@+id/firstRow"
                android:layout_width="fill_parent"
                android:layout_height="37dp">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/tv1"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_category"
                    android:padding="18dip"
                    android:text="Товары для дома"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_expense"
                    android:padding="18dip"
                    android:text="4000"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </TableRow>

            <TableRow

                android:id="@+id/secondRow"
                android:layout_width="fill_parent"
                android:layout_height="37dp">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/tv3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_category"
                    android:padding="18dip"
                    android:text="Налоги"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_expense"
                    android:padding="18dip"
                    android:text="2000"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </TableRow>

            <TableRow

                android:id="@+id/trirdRow"
                android:layout_width="fill_parent"
                android:layout_height="37dp">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/tv5"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_category"
                    android:padding="18dip"
                    android:text="Развлечения"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_expense"
                    android:padding="18dip"
                    android:text="2000"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </TableRow>

            <TableRow

                android:id="@+id/FourthRow"
                android:layout_width="fill_parent"
                android:layout_height="37dp">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/tv7"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_category"
                    android:padding="18dip"
                    android:text="Подарки"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_expense"
                    android:padding="18dip"
                    android:text="1000"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </TableRow>


            <TableRow

                android:id="@+id/sevenRow"
                android:layout_width="fill_parent"
                android:layout_height="37dp">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/tv13"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_category"
                    android:padding="18dip"
                    android:text="Продукты"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView

                    android:id="@+id/tv14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_color_expense"
                    android:padding="18dip"
                    android:text="1000"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </TableRow>

        </TableLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>